{{#if items}}

  {{#each items as |item|}}
    <section data-id="{{item._id}}">
      <div class="card text-grey bg-light col-12">

        <ul>
        <li>
          <h6>Item</h6>
            <h3>
            {{item.name}}
            </h3>
        </li>
        <li>
          <h6>Price</h6>
            <h3>
              ${{item.price}}
            </h3>
        </li>

        <p>
          {{item.description}}
        </p>

    <!-- photo -->
          <h6></h6>
          <p class="photos">
            <img src="{{item.imgUrl}}">
          </p>

        <button data-id="{{item._id}}" class="remove-from-cart btn btn-outline-danger col-4 btn-sm delete">Remove from Cart</button>

      </div>
    </section>

  {{/each}}


{{else}}
  <p>Cart empty!</p>

{{/if}}
